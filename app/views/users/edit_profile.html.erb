<div>
  <div>
    <h1>
      Edit User Account
    </h1>

    <form action="/modify_user" method="post">

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>

      <div>
        <label for="comments">
          Comments count
        </label>

        <input type="text" id="comment" name="query_comments_count" value="<%= @current_user.comments_count %>">
      </div>

      <div>
        <label for="likes">
          Likes count
        </label>

        <input type="text" id="likes" name="query_likes_count" value="<%= @current_user.likes_count %>">
      </div>

      <div>
        <label for="private_box">Private</label>
        <input type="checkbox" id="private_box" name="query_private" value="1">
      </div>

      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username" value= "<%= @current_user.username%>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>

      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>


      <button>
        Update account
      </button>
    </form>
  </div>